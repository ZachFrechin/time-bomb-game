{
  "name": "timebomb-backend",
  "version": "1.0.0",
  "description": "Time Bomb multiplayer game backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && npm run copy-static",
    "copy-static": "mkdir -p dist/static && cp -r src/static/* dist/static/",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "redis": "^4.6.5",
    "uuid": "^9.0.0",
    "dotenv": "^16.0.3",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}